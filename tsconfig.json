{
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"
  ],
  "compilerOptions": {

    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",

    "sourceMap": true,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  }
}
